<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_value_71"
    android:layout_gravity="top"
    android:background="@drawable/gradient_play_bg">

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dp_value_15"
        android:paddingRight="@dimen/dp_value_15"
        android:src="@drawable/back_white" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/back_icon"
        android:clickable="false"
        android:gravity="center"
        android:textColor="@color/color_FFFFFFFF"
        android:textSize="@dimen/text_size_15" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/name"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/dp_value_15"
            android:paddingRight="@dimen/dp_value_10"
            android:src="@drawable/icon_share" />

        <ImageView
            android:id="@+id/clip_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/dp_value_15"
            android:paddingRight="@dimen/dp_value_10"
            android:src="@drawable/icon_clip" />

        <ImageView
            android:id="@+id/catalog_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/dp_value_15"
            android:paddingRight="@dimen/dp_value_10"
            android:src="@drawable/icon_catalog" />
    </LinearLayout>

</RelativeLayout>
